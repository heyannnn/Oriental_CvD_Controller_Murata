{
  "station_id": "02",
  "station_name": "工程2 (Master Keyboard Station)",

  "serial": {
    "port": "/dev/ttyUSB0",
    "baudrate": 230400,
    "parity": "N",
    "stopbits": 1
  },

  "motors": [
    {
      "name": "motor_1",
      "slave_id": 1,
      "type": "CVD-28-KR",
      "model": "PKP266MD28A"
    }
  ],

  "keyboard": {
    "enabled": true,
    "gpio": {
      "start_button": 17,
      "stop_button": 27,
      "reset_button": 22
    }
  },

  "network": {
    "listen_port": 9000,
    "send_port": 9001,
    "is_sender": true,
    "target_ips": [
      "pi-controller-03.local",
      "pi-controller-04.local",
      "pi-controller-05.local",
      "pi-controller-06.local",
      "pi-controller-07.local",
      "pi-controller-08.local",
      "pi-controller-09.local",
      "pi-controller-10.local",
      "pi-controller-11.local"
    ],
    "video_player_ip": "127.0.0.1",
    "video_player_port": 9002
  },

  "operation": {
    "auto_home_on_boot": true,
    "default_op_no": 0
  },

  "logging": {
    "level": "INFO",
    "file": "/var/log/oriental-controller/station_02.log"
  }
}
